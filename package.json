{
  "name": "guild-hall",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "guild-hall": "./cli/index.ts"
  },
  "scripts": {
    "dev": "concurrently --names daemon,next -c blue,green \"bun run dev:daemon\" \"bun run dev:next\"",
    "dev:daemon": "bun --watch daemon/index.ts -- --packages-dir ./packages",
    "dev:next": "next dev --turbopack",
    "build": "next build",
    "start": "concurrently --names daemon,next -c blue,green \"bun run start:daemon\" \"bun run start:next\"",
    "start:daemon": "bun daemon/index.ts",
    "start:next": "next start",
    "lint": "eslint",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "guild-hall": "bun run cli/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "gray-matter": "^4.0.3",
    "hono": "^4.12.1",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prettier": "^3.8.1",
    "typescript": "^5",
    "typescript-eslint": "^8.56.0"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
