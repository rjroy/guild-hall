[Unit]
Description=Guild Hall - Claude Agent SDK Session Manager
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=rjroy
WorkingDirectory=/home/rjroy/Projects/Worktrees/guild-hall/default-port-icdgp
EnvironmentFile=/home/rjroy/.config/guild-hall/env
ExecStart=/home/rjroy/.bun/bin/bun run start
Restart=on-failure
RestartSec=5s
StandardOutput=journal
StandardError=journal
SyslogIdentifier=guild-hall

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/rjroy/Projects/Worktrees/guild-hall/default-port-icdgp

[Install]
WantedBy=multi-user.target
